<templateSet group="PHP">
  <template name="&lt;=" value="&lt;?=$END$?&gt;" description="short-hand echo '&lt;?=$value;?&gt;'" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="HTML" value="true" />
      <option name="JAVA_SCRIPT" value="true" />
      <option name="PHP" value="true" />
      <option name="SQL" value="true" />
      <option name="Twig" value="true" />
    </context>
  </template>
  <template name="sfunc" value="static function ($PARAMETERS$){&#10;    $END$&#10;}" description="static function (e.g.: as callback)" toReformat="true" toShortenFQNames="true">
    <variable name="PARAMETERS" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="PHP" value="true" />
      <option name="PHP Class Member" value="false" />
      <option name="PHP Comment" value="false" />
      <option name="PHP String Literal" value="false" />
    </context>
  </template>
  <template name="func" value="function  $NAME$($PARAMETERS$){&#10;    $END$&#10;}" description="function" toReformat="true" toShortenFQNames="true">
    <variable name="NAME" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="PARAMETERS" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="PHP" value="true" />
      <option name="PHP Class Member" value="false" />
      <option name="PHP Comment" value="false" />
      <option name="PHP String Literal" value="false" />
    </context>
  </template>
  <template name="&lt;_" value="&lt;?=$_theme-&gt;lang('$END$')?&gt;" description="echo lang. string by key $page-&gt;_['...']" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="HTML" value="true" />
      <option name="PHP" value="true" />
      <option name="Twig" value="true" />
      <option name="TypeScript" value="true" />
    </context>
  </template>
  <template name="&lt;?" value="&lt;?php $END$ ?&gt;" description="php code block" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="HTML" value="true" />
      <option name="PHP" value="true" />
      <option name="PHP Class Member" value="false" />
      <option name="PHP Interface Member" value="false" />
      <option name="PHP Trait Member" value="false" />
      <option name="SQL" value="true" />
    </context>
  </template>
  <template name="&lt;for" value="&lt;?php foreach ($ITERABLE$ as $VAR_KEY$ =&gt; $VAR_VALUE$): ?&gt;&#10;    $END$&#10;&lt;?php endforeach; ?&gt;" description="php template foreach:" toReformat="false" toShortenFQNames="true">
    <variable name="ITERABLE" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="VAR_KEY" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="VAR_VALUE" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="HTML" value="true" />
      <option name="JAVA_SCRIPT" value="true" />
      <option name="PHP" value="true" />
      <option name="PHP Class Member" value="false" />
      <option name="PHP Interface Member" value="false" />
      <option name="PHP Trait Member" value="false" />
      <option name="Twig" value="true" />
    </context>
  </template>
  <template name="&lt;if" value="&lt;?php if ($COND$): ?&gt;&#10;    $END$&#10;&lt;?php endif; ?&gt;" description="php template if:" toReformat="false" toShortenFQNames="true">
    <variable name="COND" expression="" defaultValue="true" alwaysStopAt="true" />
    <context>
      <option name="HTML" value="true" />
      <option name="JAVA_SCRIPT" value="true" />
      <option name="PHP" value="true" />
      <option name="PHP Class Member" value="false" />
      <option name="PHP Interface Member" value="false" />
      <option name="PHP Trait Member" value="false" />
      <option name="Twig" value="true" />
    </context>
  </template>
</templateSet>